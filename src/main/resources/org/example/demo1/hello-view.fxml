<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/23"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.demo1.HelloController"
            styleClass="main-pane">
   <children>
      <!-- Background Rectangle -->
      <Rectangle styleClass="background-rect" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                 AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"/>

      <!-- Decorative Circle -->
      <Rectangle styleClass="decorative-circle" width="300.0" height="300.0"
                 AnchorPane.topAnchor="-150.0" AnchorPane.rightAnchor="-150.0"/>

      <Label fx:id="welcomeLabel" layoutX="116.0" layoutY="38.0"
             text="Welcome to LifeSync"
             styleClass="welcome-label"/>

      <Label fx:id="registerLabel" layoutX="45.0" layoutY="86.0"
             text="New to portal? Register Here "
             styleClass="info-label"/>

      <Button fx:id="RegisterButton" layoutX="45.0" layoutY="130.0"
              mnemonicParsing="false"
              onAction="#openRegistrationForm"
              text="Register"
              styleClass="action-button"/>

      <Label fx:id="loginLabel" layoutX="45.0" layoutY="200.0"
             text="Already Registered? Log in"
             styleClass="info-label"/>

      <Button fx:id="LogInButton" layoutX="45.0" layoutY="242.0"
              mnemonicParsing="false"
              onAction="#OnPressSignIn"
              text="Sign In"
              styleClass="action-button"/>
   </children>
</AnchorPane>